# If an incoming request is actually an API endpoint, do not rewrite to index.html.
<IfModule mod_rewrite.c>
  RewriteEngine On

  # If request URI starts with /api/, let it pass (no rewrite)
  RewriteCond %{REQUEST_URI} ^/api(/|$) [NC]
  RewriteRule ^ - [L]

  # For static SPA files in this folder: allow direct access
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # All other requests in this folder -> index.html (SPA)
  RewriteRule ^ index.html [L]
</IfModule>
Options -Indexes

